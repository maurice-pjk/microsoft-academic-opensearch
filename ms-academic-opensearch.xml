<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>MS Academic</ShortName>
  <Description>Academic Semantic Search by Microsoft</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">https://academic.microsoft.com/App/build/icons-75bfc40a2c7542928d63dac3594141ab/favicon.ico</Image>
  <Url type="text/html" template="https://academic.microsoft.com/#/search">
    <Param name="iq" value="@{searchTerms}@"/>
    <Param name="q" value="{searchTerms}"/>
    <Param name="filters" value=""/>
    <Param name="from" value="0"/>
    <Param name="sort" value="0"/>
  </Url>
  <Url type="application/x-suggestions+json" template="suggestionURL"/>
  <moz:SearchForm>http://example.com/search</moz:SearchForm>
</OpenSearchDescription>
